# Video Memory AI - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Core Configuration
# ===========================================

# OpenAI API Key (required for OpenAI provider)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# JWT Secret Key for authentication (REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secure-secret-key-at-least-32-chars

# ===========================================
# OPTIONAL - Stripe Billing
# ===========================================

# Stripe API Secret Key
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Stripe Webhook Secret
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (create products in Stripe Dashboard)
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly
STRIPE_PRICE_TEAM_MONTHLY=price_team_monthly
STRIPE_PRICE_TEAM_YEARLY=price_team_yearly

# ===========================================
# OPTIONAL - Database Configuration
# ===========================================

# Database URL (default: SQLite)
# For PostgreSQL: postgresql://user:password@localhost:5432/videomemory
DATABASE_URL=sqlite:///./data/video_memory.db

# ===========================================
# OPTIONAL - Application Settings
# ===========================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Data directory for videos, extracts, etc.
DATA_DIR=./data

# Frontend URL (for Stripe redirect URLs)
FRONTEND_URL=http://localhost:5173

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# OPTIONAL - Rate Limiting
# ===========================================

# Requests per minute for authenticated users
RATE_LIMIT_AUTH_RPM=100

# Requests per minute for unauthenticated users
RATE_LIMIT_UNAUTH_RPM=20

# Video processing requests per hour
RATE_LIMIT_VIDEO_PER_HOUR=10
